<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:startOffset="200"
    android:fillAfter="true">

    <alpha
        android:duration="300"
        android:fromAlpha="0"
        android:toAlpha="1" />

    <rotate
        android:duration="300"
        android:fromDegrees="-180"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toDegrees="0" />

    <translate
        android:duration="300"
        android:fromYDelta="-100%"
        android:toYDelta="0%" />

</set>