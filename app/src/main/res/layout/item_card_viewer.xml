<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutItemCardViewer"
    android:layout_width="match_parent"
    android:layout_margin="1dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/textViewNativeWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:textSize="20sp"
        android:textColor="#9BC16F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewForeignWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:textSize="20sp"
        android:textColor="#D3BB75"
        app:layout_constraintStart_toEndOf="@+id/textViewNativeWord"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewIpa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:textSize="20sp"
        android:textColor="#77AAC1"
        app:layout_constraintStart_toEndOf="@+id/textViewForeignWord"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>